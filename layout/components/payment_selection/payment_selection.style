/* Payment Selection CSS Styles*/

.membership_types_tbl {
	width: 100%;
}

.membership_types_tbl td {
	vertical-align: top
}

.membership_types_tbl .block {
	margin-bottom: 5px;
}

.membership_types_diagram td {
	vertical-align: top;
	padding-top: 0px;
}

.td_1 {
	background: transparent;
}

.td_2 {
	background: #EEEEEE;
}

.membership_desc {
	font-size: << $small_font;
}

.benefit {
	border: 1px solid #b6b4b5;
	padding: 3px 4px 0px 4px;
	border-top: none;
	font-size: << $small_font;
	height: 18px;
}

.current_status {
	padding: 20px 0 0 5px;
}

.plan_box {
	background: #eee;
	padding: 2px;
	font-size: << $small_font;
	margin-top: 3px;
	height: 47px;
}

.plans {
	vertical-align: top;
}

.current {
	background-color: #ffffe1;
}

.available, .unavailable << $small_font {
	height: 19px;
	padding-top: 2px;
	border: 1px solid #B6B4B5;
	line-height: 17px;
	text-align: center;
	border-top: none;
	background: image(mark.png) no-repeat center center;
	padding-left: 24px;
}

.unavailable, .no_mark {
	background: none;
	padding-left: 2px;
}

.amount {
	/*font-weight: bold;*/
	font-size: << $base_font;
}

.providers {
	width: 50%;
	float: right;
	margin: 5px 0 10px;
	text-align: right;	
}

.provider_logo {
	padding-top: 5px;
}

.claim_btn {
	display: none;
}

.first_col {
	width: 250px;
}

.pay_by_sms {
	padding: 15px 35px;
	text-align: center;
}
body input.checkout_btn {
	margin-top: 5px;
}