/* Comment list CSS */

.comment_list .list_thumb {
	width: 40px;
	argin-right: -40px;
}

.comment_list .list_block {
	margin-left: 40px;
}

.comment_list .list_info {
	height: 32px;
}

.comment_list .bid {
	text-align: right;
	padding-right: 5px;
	font-weight: bold;
}

.del_link {
	text-align: right;
	float: right;
	width: 20%;
}

.comment_stat {
	float: left;
	width: 78%;
}