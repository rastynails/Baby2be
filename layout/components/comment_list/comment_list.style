/* Comment list CSS */

.comment_list .list_thumb {
	width: 40px;
	margin-right: -40px;
}

.comment_list .list_block {
	margin-left: 40px;
}

.comment_list .list_info {
	min-height: 32px;
	height: auto;
	position: relative;
}

.del_link {
	text-align: right;
	float: none;
	width: auto;
	position: absolute;
	right: 3px;
	top: 0px;
}

.comment_stat {
	float: none;
	width: 78%;
}
